generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  APPROVER
  REQUESTER
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  passwordHash String
  role         Role       @default(REQUESTER)
  status       UserStatus @default(ACTIVE)

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}
